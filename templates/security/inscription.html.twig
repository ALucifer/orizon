{% extends 'base.html.twig' %}
{% block title %} Bienvenue sur Orizon!
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/app.css') }}"/>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/js/app.js') }}"></script>
    <script type="text/javascript" > particlesJS.load('particles-js', 'particles.json', function() {
            console.log('callback - particles.js loaded...');
        });</script>
{% endblock %}

{% block body %}
    <div id="particles-js"></div>

    <div class="signupSection">
        <div class="info">
            <h2>Une mission pour être le meilleur </h2>
            <p>Ton Futur Esportif est là</p>
            <p>Si tu souhaites te connecter clique <a href={{ path('login') }}>ici</a></p>
            <p>Tu représente une structure et tu souhaites être référencer pour pouvoir recruter et participer activement à L'esport ?
                Clique <a href= {{ path('structure_add') }}>ici</a> alors !

            </p>
            <img src="{{ asset('css/orizon_logotest.png') }}" alt="">

        </div>
        {{ form_start(form, {'METHOD': 'POST'}, {'label_attr': {'class:':'signupForm'}}) }}
        <h2>Inscription</h2>
        <ul class="noBullet">

            <li>Email :
                {{ form_row(form.email, oninput="return userNameValidation(this.value)") }}
                {% for label, messages in app.flashes %}
                    {% for message in messages  %}
                        <div class="flash-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </li>
            <li> Mot de passe :


                {{ form_row(form.Password, {'label_attr': {'class':'inputFields', 'id': 'password'}},  oninput="return passwordValidation(this.value)") }}
            </li>
            <li id="center-btn">
                {{ form_row(form.submit,{'label_attr': {'id': 'join-btn','name':'join'}}) }}
            </li>
        </ul>
        {{ form_end(form) }}
    </div>

{% endblock %}
