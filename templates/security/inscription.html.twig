{% extends 'base.html.twig' %}
{% block title %} Bienvenue sur Orizon!
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/inscription.css') }}"/>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/particles.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/inscription.js') }}"></script>
    <script type="text/javascript" > particlesJS.load('particles-js', 'particles.json', function() {
            console.log('callback - particles.js loaded...');
        });</script>
{% endblock %}

{% block body %}
    <div id="particles-js"></div>

    <div class="signupSection">

        <div class="info">
            <h2>Une mission pour être le meilleur </h2>
            <p>Ton Futur Esportif est là</p>
            <img src="{{ asset('css/orizon_logotest.png') }}" alt="">

        </div>
            {{ form_start(form, {'METHOD': 'POST'}, {'label_attr': {'class:':'signupForm'}}) }}
            <h2>S'inscrire</h2>
            <ul class="noBullet">
                <li>
                    <label for="email"></label>
                    {{ form_row(form.email, {'label_attr': {'id': 'email', 'name':'email'}},  oninput="return userNameValidation(this.value)") }}
                </li>
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                <li>
                    <label for="password"></label>
                    {{ form_row(form.Password, {'label_attr': {'class':'inputFields', 'id': 'password', 'name':'password'}},  oninput="return passwordValidation(this.value)") }}
                    {{ form_errors(form.Password) }}
                </li>
                <li id="center-btn">
                    {{ form_row(form.submit) }}
                </li>
            </ul>
            {{ form_end(form) }}
    </div>


{% endblock %}
